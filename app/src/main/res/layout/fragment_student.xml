<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    tools:context=".StudentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/buttonBackToDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Dashboard"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_blue_light"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Header -->
        <TextView
            android:id="@+id/textViewStudentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Attendance"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonBackToDashboard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/textViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR Code or detect BLE beacon to join attendance"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewStudentTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- QR Scanner Section -->
        <TextView
            android:id="@+id/textViewQrScanLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Method 1: QR Code Scanning"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSubtitle"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonScanQr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ“± Open QR Scanner"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewQrScanLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- OR Divider -->
        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonScanQr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewOr" />

        <TextView
            android:id="@+id/textViewOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonScanQr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonScanQr"
            app:layout_constraintStart_toEndOf="@+id/textViewOr"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- BLE Scanner Section -->
        <TextView
            android:id="@+id/textViewBleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Method 2: Bluetooth Beacon Detection"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewOr"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewBleStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLE Status: Ready to scan"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewBleLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonScanBle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ“¡ Scan for BLE Beacons"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewBleStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Session Info Section -->
        <TextView
            android:id="@+id/textViewSessionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonScanBle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewSessionId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Session ID: Not connected"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSessionInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewTeacherInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Teacher: Unknown"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSessionId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBarScanning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeacherInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Status Messages -->
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/progressBarScanning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Join Attendance Button -->
        <Button
            android:id="@+id/buttonJoinAttendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="âœ… Join Attendance Session"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_orange_dark"
            android:layout_marginTop="24dp"
            android:enabled="false"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/textViewStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>