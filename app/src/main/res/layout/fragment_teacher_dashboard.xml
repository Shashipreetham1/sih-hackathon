<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    tools:context=".TeacherDashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Welcome, Teacher!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="center"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Teacher Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewTeacherInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewWelcome">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textViewTeacherInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading teacher information..."
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Class Management Actions -->
        <TextView
            android:id="@+id/textViewActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Management"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewTeacherInfo" />

        <!-- Mark Attendance Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonMarkAttendance"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Mark Attendance"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_green_dark"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_dialog_map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewActions" />

        <!-- Manage Classes Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonManageClasses"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Manage Classes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_blue_dark"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_manage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonMarkAttendance" />

        <!-- View Reports Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonViewReports"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="View Attendance Reports"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_view"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonManageClasses" />

        <!-- Sign Out Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSignOut"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Sign Out"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_red_light"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonViewReports" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>