<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaceEnrollFragment">

    <Button
        android:id="@+id/buttonCaptureFace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture Face"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/textViewFaceEnrollStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Position face in camera view"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonCaptureFace"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <androidx.camera.view.PreviewView
        android:id="@+id/previewViewFaceEnroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textViewFaceEnrollStatus"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/progressBarFaceEnroll"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>